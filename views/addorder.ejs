<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Order Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 </head>

  <body>
  <h1>Add Order</h1>
  

  <form id="form" action="#" method="post">
    <label for="name">Customer Name</label><br>
    <input type="text" name="name"><br>
    

    <label for="name">Phone Number</label><br>
    <input type="tel" name="phone" pattern="[0-9]{5,15}"><br>

    <label for="name">Address</label><br>
    <textarea name="address" rows="4" cols="50"></textarea><br>

    <label for="name">Quantity</label><br>
    <input type="number" name="item_qty"/><br>    

    <label for="name">Received Date</label><br>
    <input type="date" name="item_received_date"/><br>     

    <input type="submit" name="submit"/>

  </form>  
  
  </body>

</html>