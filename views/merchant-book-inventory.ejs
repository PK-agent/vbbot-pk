<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Merchant Book Inventory Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 </head>

  <body>
  <h1>Book Inventory Details</h1>
  <form id="form" action="/merchant/book-inventory" method="post">
    
      <label for="name">Merchant Name</label><br>
      <input type="text" name="name" value="<%= user.name %>" /><br>
      
  
      <label for="name">Phone Number</label><br>
      <input type="tel" name="phone" pattern="[0-9]{5,15}" value="<%= user.phone %>" /><br>
  
      <label for="name">Address</label><br>
      <textarea name="address" rows="4" cols="50"></textarea><br>

      <label for="name">Corn Type</label><br>
      <select type="option" name="corn_type">
        <option value="888">CP-888</option>
        <option value="222">CP-222</option>
        <option value=336>CP-336</option>          
      </select><br>
  
      <label for="name">Quantity</label><br>
      <input type="number" name="corn_qty"/><br>  
      
      <label for="name">Wanted Price</label><br>
      <input type="number" name="wanted_price"/><br>

      <label for="name">Comments</label><br>
      <textarea name="comment" rows="4" cols="50"></textarea><br>
  
      <label for="name">Received Date</label><br>
      <input type="date" name="received_date"/><br>

      <input type="hidden" name="user_id" value="<%= user.id %>"/>
    
    <input type="submit" name="Book Inventory"/>

  </form>
  <script>
    
    const windowClose = () => {
      setTimeout(()=>{
        window.close();
      },2000);    
    }
  
        
    document.getElementById("form").addEventListener("Book Inventory", windowClose); 
    
   
    </script>
   
  </body>

</html>