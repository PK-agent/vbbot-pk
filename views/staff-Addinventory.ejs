  <body>
  <div class="addinventory"><h1 class="header">Add Inventory</h1></div>
    <div class="main">
  <form id="form" action="/staff/merchant/add-inventory" method="post">
    <div id="name">
    
      <label class="label1" for="name">ကုန်သည်အမည်</label><br>
      <input class="merchant" type="text" name="name" value="<%= data.name %>" /><br>
      
  
      <label class="label2" for="name">ဖုန်းနံပါတ်</label><br>
      <input class="phone" type="tel" name="phone" pattern="[0-9]{5,15}" value="<%= data.phone %>"  /><br>
  
      <label class="label3" for="name">နေရပ်လိပ်စာ</label><br>
      <textarea class="address" name="address" rows="2" cols="30"><%= data.address %></textarea><br>

      <label class="label4" for="name">ပြောင်းအမျိုးအစား</label><br>
      <input class="corntype" type="number" name="corn_type"/><br>
  
      <label class="label5" for="name">တင်းအရေအတွက်</label><br>
      <input class="cornqty" type="number" name="corn_qty"/><br>  
      
      <label class="label6" for="name">ပေးချေခဲ့သည့်‌စျေးနှုန်း</label><br>
      <input class="purchasedprice" type="number" name="purchased_price"/><br>

      <label class="label7" for="name">မှတ်ချက်</label><br>
      <textarea class="comment" name="comment" rows="2" cols="30"></textarea><br>
  
      <label class="label8" for="name">၀ယ်ယူခဲ့သည့်ရက်စွဲ</label><br>
      <input class="receiveddate" type="date" name="received_date"/><br>      
      
      <input type="hidden" name="user_id" value="<%= data.userId %>"/>
      
    <input class="submit" type="submit" name="submit"/>    
  </div>
  </form>
</div>
  <script>
    
    const windowClose = () => {
      setTimeout(()=>{
        window.close();
      },2000);    
    }
  
        
    document.getElementById("form").addEventListener("submit", windowClose); 
    
   
    </script>
   
  </body>

